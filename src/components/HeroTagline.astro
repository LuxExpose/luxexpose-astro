---
interface Props {
  tagline: string;
  subtext?: string;
}

const { tagline, subtext } = Astro.props;
---

<section class="container mx-auto px-4 sm:px-6 py-12 md:py-16">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="font-serif text-3xl md:text-4xl lg:text-5xl text-white mb-6 italic">
      {tagline}
    </h2>
    {subtext && (
      <p class="text-white/70 text-lg md:text-xl leading-relaxed max-w-3xl mx-auto">
        {subtext}
      </p>
    )}
  </div>
</section>

