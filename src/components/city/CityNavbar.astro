---
// src/components/city/CityNavbar.astro
import CityUtilityBar from './CityUtilityBar.astro';
import CityMainNav from './CityMainNav.astro';

interface Props {
  city: 'boston' | 'miami' | 'nyc' | 'doha';
  categories: Array<{ name: string; slug: string; path: string }>;
  activeCategorySlug?: string;
}

const { city, categories, activeCategorySlug } = Astro.props;
---

<nav class="city-navbar">
  <CityUtilityBar city={city} />
  <CityMainNav 
    city={city} 
    categories={categories} 
    activeCategorySlug={activeCategorySlug}
  >
    <slot name="user-menu" slot="user-menu" />
  </CityMainNav>
</nav>

<style>
  .city-navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 9999;
    width: 100%;
    isolation: isolate;
    background: hsl(var(--background) / 0.95);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border);
    transition: all 0.5s;
  }
  
  .city-navbar.scrolled {
    box-shadow: 0 1px 20px rgba(0, 0, 0, 0.08);
  }
</style>

<script>
  const navbar = document.querySelector('.city-navbar');
  
  if (navbar) {
    window.addEventListener('scroll', () => {
      navbar.classList.toggle('scrolled', window.scrollY > 20);
    }, { passive: true });
    
    // Set navbar spacer height dynamically
    function updateCityNavbarSpacer() {
      const spacer = document.querySelector('.city-navbar-spacer');
      if (navbar && spacer) {
        const height = navbar.offsetHeight;
        (spacer as HTMLElement).style.height = `${height}px`;
      }
    }
    
    // Update on load and resize
    updateCityNavbarSpacer();
    window.addEventListener('resize', updateCityNavbarSpacer);
  }
</script>

