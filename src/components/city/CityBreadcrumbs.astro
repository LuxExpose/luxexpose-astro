---
// src/components/city/CityBreadcrumbs.astro
interface Props {
  city: string;
  cityName: string;
  categoryName?: string;
  categorySlug?: string;
}

const { city, cityName, categoryName, categorySlug } = Astro.props;
---

<nav aria-label="Breadcrumb" class="breadcrumbs">
  <!-- Home Link -->
  <a href="/" class="breadcrumb-link">
    <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
      <polyline points="9 22 9 12 15 12 15 22"/>
    </svg>
    <span>Home</span>
  </a>
  
  <!-- City -->
  {categoryName ? (
    <>
      <div class="breadcrumb-item">
        <svg class="chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9 18 15 12 9 6"/>
        </svg>
        <a href={`/${city}`} class="breadcrumb-link">{cityName}</a>
      </div>
      <div class="breadcrumb-item">
        <svg class="chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9 18 15 12 9 6"/>
        </svg>
        <span class="breadcrumb-current" aria-current="page">{categoryName}</span>
      </div>
    </>
  ) : (
    <div class="breadcrumb-item">
      <svg class="chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="9 18 15 12 9 6"/>
      </svg>
      <span class="breadcrumb-current" aria-current="page">{cityName}</span>
    </div>
  )}
</nav>

<style>
  .breadcrumbs {
    display: flex;
    align-items: center;
    gap: 8px; /* gap-2 */
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 14px; /* text-sm */
    font-weight: 400;
    margin-bottom: 24px; /* mb-6 */
    max-width: 1280px;
    margin-left: auto;
    margin-right: auto;
    padding-top: 32px; /* py-8 top half */
    padding-bottom: 32px; /* py-8 bottom half */
    padding-left: 16px;
    padding-right: 16px;
  }

  .breadcrumb-item {
    display: flex;
    align-items: center;
    gap: 8px; /* gap-2 */
  }

  .breadcrumb-link {
    color: hsl(var(--muted-foreground));
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 4px; /* gap-1 */
    transition: color 0.2s ease;
  }

  .breadcrumb-link:hover {
    color: hsl(var(--foreground));
  }

  .breadcrumb-current {
    color: hsl(var(--foreground));
    font-weight: 500; /* font-medium */
  }

  .icon {
    width: 16px; /* h-4 w-4 */
    height: 16px;
  }

  .chevron {
    width: 16px;
    height: 16px;
    color: hsl(var(--muted-foreground));
  }
</style>

