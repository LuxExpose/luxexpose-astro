---
// src/components/city/CityIntroSection.astro
import CityBreadcrumbs from './CityBreadcrumbs.astro';

interface Props {
  city: 'boston' | 'miami' | 'nyc' | 'doha';
  cityName: string;
  headline: string;
  description: string;
  categoryName?: string;
  categorySlug?: string;
}

const { city, cityName, headline, description, categoryName, categorySlug } = Astro.props;
---

<!-- Breadcrumbs -->
<CityBreadcrumbs 
  city={city}
  cityName={cityName}
  categoryName={categoryName}
  categorySlug={categorySlug}
/>

<!-- SEO H1 and Description Section -->
<section class="intro-section">
  <div class="container">
    <div class="content-wrapper">
      <!-- H1 with Golden Gradient -->
      <h1 class="city-headline">
        {headline}
      </h1>
      
      <!-- Description Paragraph -->
      <p class="city-description">
        {description}
      </p>
    </div>
  </div>
</section>

<style>
  .intro-section {
    padding-bottom: 32px; /* pb-8 */
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding-left: 16px;
    padding-right: 16px;
  }

  .content-wrapper {
    max-width: 768px; /* max-w-3xl = 48rem */
    margin: 0 auto;
    text-align: center;
  }

  .city-headline {
    font-family: 'Inter', system-ui, sans-serif; /* NOT Cormorant Garamond */
    font-weight: 700; /* font-bold */
    font-size: 36px; /* text-4xl */
    line-height: 1.1;
    letter-spacing: normal;
    margin-bottom: 24px; /* mb-6 */
    
    /* Golden Gradient Text Effect */
    background: linear-gradient(
      to right,
      hsl(43 35% 48%),  /* --primary */
      hsl(43 35% 48%),  /* --accent (same as primary) */
      hsl(43 35% 48%)   /* --primary */
    );
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    -webkit-text-fill-color: transparent;
  }

  @media (min-width: 768px) {
    .city-headline {
      font-size: 48px; /* md:text-5xl */
    }
  }

  .city-description {
    font-family: 'Inter', system-ui, sans-serif;
    font-weight: 400; /* font-normal */
    font-size: 18px; /* text-lg */
    line-height: 1.7;
    color: hsl(var(--muted-foreground));
    margin: 0;
  }
</style>

