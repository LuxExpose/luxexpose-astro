---
// src/components/city/CityHeroTagline.astro
interface Props {
  heroTagline: string;
  heroSubtext: string;
}

const { heroTagline, heroSubtext } = Astro.props;
---

<section class="hero-tagline">
  <div class="container">
    <!-- Tagline Headline -->
    <h2 class="tagline-headline">
      {heroTagline}
    </h2>
    
    <!-- Subtext Badge -->
    <p class="tagline-subtext">
      {heroSubtext}
    </p>
  </div>
</section>

<style>
  .hero-tagline {
    margin-top: -32px; /* -mt-8 = -2rem */
    margin-bottom: 16px; /* mb-4 = 1rem */
    position: relative;
    z-index: 20;
  }
  
  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding-left: 16px;
    padding-right: 16px;
    text-align: center;
  }
  
  .tagline-headline {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-weight: 700;
    font-size: 24px; /* text-2xl */
    line-height: 1.2;
    margin-bottom: 8px; /* mb-2 */
    color: hsl(var(--foreground));
  }
  
  @media (min-width: 768px) {
    .tagline-headline {
      font-size: 30px; /* md:text-3xl */
    }
  }
  
  .tagline-subtext {
    font-family: 'Inter', system-ui, sans-serif;
    font-weight: 400;
    font-size: 14px; /* text-sm */
    line-height: 1.5;
    color: hsl(var(--muted-foreground));
    display: inline-flex;
    align-items: center;
    gap: 8px; /* gap-2 */
    padding: 8px 16px; /* px-4 py-2 */
    border-radius: 9999px; /* rounded-full */
    background: rgba(var(--background), 0.5);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    border: 1px solid rgba(var(--border), 0.5);
  }
</style>

