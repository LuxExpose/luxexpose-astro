---
// src/components/BeyondTheEditorial.astro

interface Feature {
  title: string;
  description: string;
  href: string;
  cta: string;
}

const features: Feature[] = [
  {
    title: "Private Community",
    description: "Connect with verified luxury enthusiasts in our members-only social network",
    href: "/community",
    cta: "Join Network"
  },
  {
    title: "Concierge Services",
    description: "White-glove assistance for reservations, exclusive access & bespoke experiences",
    href: "/concierge",
    cta: "Get Access"
  },
  {
    title: "Curated Experiences",
    description: "Book exclusive villas, yachts, jets & once-in-a-lifetime experiences",
    href: "/experiences",
    cta: "Explore"
  },
  {
    title: "City Guides",
    description: "Destination expertise for Miami, NYC, Boston & the world's most prestigious locales",
    href: "/cities",
    cta: "Discover"
  }
];
---

<section class="beyond-editorial">
  <div class="beyond-container">
    
    <!-- Section Header -->
    <div class="beyond-header">
      <h2 class="beyond-title">Beyond The Editorial</h2>
      <p class="beyond-subtitle">
        Lux Expos√© is the premier gateway to curated luxury, elite experiences, and the world's most distinguished lifestyles.
      </p>
      <div class="beyond-divider"></div>
    </div>
    
    <!-- Feature Cards Grid (2x2) -->
    <div class="features-grid">
      {features.map((feature, index) => (
        <a href={feature.href} class="feature-card group" key={feature.href}>
          
          <!-- Corner Accent -->
          <div class="corner-accent"></div>
          
          <!-- Number Indicator -->
          <div class="card-number">{String(index + 1).padStart(2, '0')}</div>
          
          <!-- Content -->
          <div class="card-content">
            <h3 class="card-title">{feature.title}</h3>
            <p class="card-description">{feature.description}</p>
            
            <!-- CTA with animated line -->
            <span class="card-cta">
              {feature.cta}
              <span class="cta-line"></span>
            </span>
          </div>
          
        </a>
      ))}
    </div>
    
    <!-- Bottom CTA Button -->
    <div class="beyond-footer">
      <a href="/concierge" class="membership-btn">
        Apply for Membership
      </a>
    </div>
    
  </div>
</section>

<style>
  /* Section Container */
  .beyond-editorial {
    width: 100%;
    padding: 4rem 0;
  }

  @media (min-width: 768px) {
    .beyond-editorial {
      padding: 6rem 0;
    }
  }

  .beyond-container {
    max-width: 72rem;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media (min-width: 640px) {
    .beyond-container {
      padding: 0 1.5rem;
    }
  }

  /* Header */
  .beyond-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  @media (min-width: 768px) {
    .beyond-header {
      margin-bottom: 4rem;
    }
  }

  .beyond-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.875rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    color: hsl(var(--foreground));
    margin-bottom: 1rem;
  }

  @media (min-width: 768px) {
    .beyond-title {
      font-size: 2.25rem;
    }
  }

  @media (min-width: 1024px) {
    .beyond-title {
      font-size: 3rem;
    }
  }

  .beyond-subtitle {
    font-size: 1.125rem;
    color: hsl(var(--foreground) / 0.7);
    font-weight: 300;
    max-width: 42rem;
    margin: 0 auto;
    line-height: 1.6;
  }

  @media (min-width: 768px) {
    .beyond-subtitle {
      font-size: 1.25rem;
    }
  }

  .beyond-divider {
    width: 6rem;
    height: 1px;
    background: linear-gradient(to right, transparent, hsl(var(--luxury-gold)), transparent);
    margin: 1.5rem auto 0;
  }

  /* Features Grid */
  .features-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  @media (min-width: 768px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
  }

  /* Feature Card */
  .feature-card {
    display: block;
    position: relative;
    background: linear-gradient(to bottom right, hsl(var(--background)), hsl(var(--card)), hsl(var(--background)));
    border: 1px solid hsl(var(--luxury-gold) / 0.1);
    border-radius: 1rem;
    padding: 2rem;
    overflow: hidden;
    transition: all 0.5s ease;
    text-decoration: none;
  }

  @media (min-width: 768px) {
    .feature-card {
      padding: 2.5rem;
    }
  }

  .feature-card:hover {
    border-color: hsl(var(--luxury-gold) / 0.3);
    box-shadow: 0 8px 32px hsl(var(--luxury-gold) / 0.1);
    transform: translateY(-2px);
  }

  /* Corner Accent */
  .corner-accent {
    position: absolute;
    top: 0;
    right: 0;
    width: 8rem;
    height: 8rem;
    background: linear-gradient(to bottom left, hsl(var(--luxury-gold) / 0.15), transparent);
    pointer-events: none;
  }

  /* Number Indicator */
  .card-number {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    font-family: 'Cormorant Garamond', serif;
    font-size: 3.75rem;
    color: hsl(var(--foreground) / 0.05);
    transition: color 0.5s ease;
    pointer-events: none;
    z-index: 1;
  }

  .feature-card:hover .card-number {
    color: hsl(var(--luxury-gold) / 0.1);
  }

  /* Card Content */
  .card-content {
    position: relative;
    z-index: 10;
  }

  .card-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.5rem;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
    color: hsl(var(--foreground));
    transition: color 0.3s ease;
  }

  @media (min-width: 768px) {
    .card-title {
      font-size: 1.875rem;
    }
  }

  .feature-card:hover .card-title {
    color: hsl(var(--luxury-gold) / 0.9);
  }

  .card-description {
    color: hsl(var(--foreground) / 0.5);
    font-weight: 300;
    line-height: 1.625;
    margin-bottom: 2rem;
    font-size: 1.125rem;
  }

  /* CTA */
  .card-cta {
    display: inline-flex;
    align-items: center;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: hsl(var(--luxury-gold) / 0.7);
    transition: color 0.3s ease;
  }

  .feature-card:hover .card-cta {
    color: hsl(var(--luxury-gold));
  }

  .cta-line {
    display: inline-block;
    margin-left: 0.75rem;
    width: 2rem;
    height: 1px;
    background-color: hsl(var(--luxury-gold) / 0.5);
    transition: all 0.3s ease;
  }

  .feature-card:hover .cta-line {
    width: 3rem;
    background-color: hsl(var(--luxury-gold));
  }

  /* Footer CTA */
  .beyond-footer {
    text-align: center;
  }

  .membership-btn {
    display: inline-block;
    font-family: 'Cormorant Garamond', serif;
    letter-spacing: 0.05em;
    padding: 0.75rem 2rem;
    border: 1px solid hsl(var(--luxury-gold) / 0.3);
    border-radius: 0.375rem;
    color: hsl(var(--foreground));
    background: transparent;
    font-size: 1rem;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .membership-btn:hover {
    background: hsl(var(--luxury-gold) / 0.1);
    border-color: hsl(var(--luxury-gold) / 0.5);
    transform: translateY(-1px);
  }

  /* Light Theme Adjustments */
  .light .beyond-subtitle {
    color: hsl(var(--foreground) / 0.6);
  }
  
  .light .feature-card {
    background: linear-gradient(to bottom right, hsl(var(--card)), hsl(var(--background)), hsl(var(--card)));
    border-color: hsl(var(--luxury-gold) / 0.15);
  }
  
  .light .card-number {
    color: hsl(var(--foreground) / 0.05);
  }
  
  .light .feature-card:hover .card-number {
    color: hsl(var(--luxury-gold) / 0.15);
  }
  
  .light .card-title {
    color: hsl(var(--foreground));
  }
  
  .light .card-description {
    color: hsl(var(--foreground) / 0.5);
  }
</style>

