    <div class="text-center mb-8 md:mb-12">
      <h2 class="font-serif text-3xl md:text-4xl text-white mb-4">
        {explorationHeadline}
      </h2>
      {explorationSubtext && (
        <p class="text-white/70 text-lg max-w-2xl mx-auto">
          {explorationSubtext}
        </p>
      )}
    </div>
  )}

  {stats.length > 0 && (
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 md:gap-6">
      {stats.map((stat) => (
        <div class="text-center p-4 md:p-6 rounded-xl border border-white/10 bg-black/40 backdrop-blur-sm">
          <div class="mb-3 text-3xl md:text-4xl">
            {stat.icon === "home" && "ğŸ "}
