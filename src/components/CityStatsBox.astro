---
interface Stat {
  icon: string;
  label: string;
  value: string;
  description?: string;
}

interface Props {
  stats: Stat[];
  explorationHeadline?: string;
  explorationSubtext?: string;
  cityName?: string;
}

const { stats, explorationHeadline, explorationSubtext, cityName } = Astro.props;
---

