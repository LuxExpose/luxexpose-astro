---
// Footer Component
// No props needed - static content

const categories = [
  { name: "Autos", path: "/category/autos" },
  { name: "Hotels", path: "/category/hotels-and-resorts" },
  { name: "Watches", path: "/category/luxury-watches" },
  { name: "Yachts", path: "/category/the-best-luxury-yachts" },
  { name: "Real Estate", path: "/category/luxury-real-estate" },
  { name: "Fashion", path: "/category/fashion" },
];

const connectLinks = [
  { name: "Editorial", path: "/editorial" },
  { name: "Community Forums", path: "/forums" },
  { name: "Submit Content", path: "/submit" },
  { name: "Concierge Services", path: "/concierge" },
  { name: "Partnerships & Advertising", path: "/partnerships" },
  { name: "Media Kit", path: "/media-kit" },
  { name: "Contact Us", path: "/contact" },
];

const legalLinks = [
  { name: "Terms & Conditions", path: "/terms" },
  { name: "Privacy Policy", path: "/privacy" },
  { name: "About Us", path: "/about" },
];

const networkCities = [
  { name: "Lux Exposé Global", path: "/", icon: "★", isGlobal: true, active: true },
  { name: "Lux Boston", path: "/boston", icon: "●", active: true },
  { name: "Lux Miami", path: "/miami", icon: "●", active: true },
  { name: "Lux New York", path: "/nyc", icon: "●", active: true },
  { name: "Lux LA", path: "/la", icon: "○", active: false, comingSoon: true },
];

const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="footer-container">
    <div class="footer-grid">
      
      <!-- Brand Column -->
      <div class="footer-brand">
        <a href="/" class="footer-logo">
          <span class="logo-lux">LUX </span>
          <span class="logo-expose">EXPOSÉ</span>
        </a>
        <p class="footer-tagline">
          Your premier destination for luxury lifestyle content. Discover the finest in automotive excellence, 
          haute horlogerie, exclusive real estate, and sophisticated travel.
        </p>
        <div class="social-links">
          <a href="https://facebook.com" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Facebook">
            <svg class="social-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
            </svg>
          </a>
          <a href="https://twitter.com" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Twitter">
            <svg class="social-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
            </svg>
          </a>
          <a href="https://instagram.com" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Instagram">
            <svg class="social-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
            </svg>
          </a>
          <a href="mailto:contact@luxexpose.com" class="social-link" aria-label="Email">
            <svg class="social-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect width="20" height="16" x="2" y="4" rx="2"></rect>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Categories Column -->
      <div class="footer-column">
        <h4 class="footer-heading">Categories</h4>
        <ul class="footer-links">
          {categories.map(category => (
            <li><a href={category.path}>{category.name}</a></li>
          ))}
        </ul>
      </div>

      <!-- Connect Column -->
      <div class="footer-column">
        <h4 class="footer-heading">Connect</h4>
        <ul class="footer-links">
          {connectLinks.map(link => (
            <li><a href={link.path}>{link.name}</a></li>
          ))}
        </ul>
      </div>

      <!-- Legal Column -->
      <div class="footer-column">
        <h4 class="footer-heading">Legal</h4>
        <ul class="footer-links">
          {legalLinks.map(link => (
            <li><a href={link.path}>{link.name}</a></li>
          ))}
        </ul>
      </div>

      <!-- Network Column -->
      <div class="footer-column">
        <h4 class="footer-heading">Lux Exposé Network</h4>
        <ul class="footer-links network-links">
          {networkCities.map(city => (
            <li>
              {city.active ? (
                <a 
                  href={city.path} 
                  class:list={[
                    'network-link',
                    { 'global': city.isGlobal },
                    { 'active': !city.isGlobal && city.active }
                  ]}
                >
                  <span class="network-icon">{city.icon}</span>
                  {city.name}
                </a>
              ) : (
                <span class="network-link disabled">
                  <span class="network-icon">{city.icon}</span>
                  {city.name} <span class="coming-soon">(Coming Soon)</span>
                </span>
              )}
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Copyright -->
    <div class="footer-bottom">
      <p>&copy; {currentYear} Lux Exposé. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  /* Footer Container */
  .site-footer {
    margin-top: 3rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    box-shadow: 0 -1px 20px rgba(218, 165, 32, 0.1);
  }

  @media (min-width: 640px) {
    .site-footer {
      margin-top: 4rem;
    }
  }

  @media (min-width: 768px) {
    .site-footer {
      margin-top: 5rem;
    }
  }

  .footer-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  @media (min-width: 640px) {
    .footer-container {
      padding: 2.5rem 1rem;
    }
  }

  @media (min-width: 768px) {
    .footer-container {
      padding: 3rem 1rem;
    }
  }

  /* Footer Grid */
  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  @media (min-width: 640px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
      margin-bottom: 2rem;
    }
  }

  @media (min-width: 1024px) {
    .footer-grid {
      grid-template-columns: repeat(5, 1fr);
    }
  }

  /* Brand Section */
  .footer-brand {
    grid-column: 1 / -1;
  }

  @media (min-width: 1024px) {
    .footer-brand {
      grid-column: 1 / 2;
    }
  }

  .footer-logo {
    display: inline-block;
    margin-bottom: 1rem;
    text-decoration: none;
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: 0.1em;
  }

  .logo-lux {
    color: #f5f5f5;
  }

  .logo-expose {
    color: #DAA520;
  }

  .footer-tagline {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.75rem;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  @media (min-width: 640px) {
    .footer-tagline {
      font-size: 0.875rem;
      margin-bottom: 1.5rem;
    }
  }

  /* Social Links */
  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.7);
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .social-link:hover {
    background: #DAA520;
    color: #000;
  }

  .social-icon {
    width: 18px;
    height: 18px;
  }

  /* Footer Columns */
  .footer-column {
    /* Default styles */
  }

  .footer-heading {
    font-weight: 600;
    margin-bottom: 1rem;
    color: #f5f5f5;
    font-size: 0.875rem;
    letter-spacing: 0.05em;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-links a {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: #DAA520;
  }

  /* Network Links */
  .network-links a,
  .network-links span {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .network-icon {
    font-size: 0.75rem;
  }

  .network-link.global {
    color: rgba(255, 255, 255, 0.6);
  }

  .network-link.global .network-icon {
    color: #DAA520;
  }

  .network-link.global:hover {
    color: #DAA520;
  }

  .network-link.active {
    color: #DAA520;
    font-weight: 500;
  }

  .network-link.disabled {
    color: rgba(255, 255, 255, 0.3);
    cursor: default;
  }

  .network-link.disabled .network-icon {
    color: rgba(255, 255, 255, 0.2);
  }

  .coming-soon {
    font-size: 0.75rem;
    margin-left: 0.25rem;
  }

  /* Footer Bottom */
  .footer-bottom {
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
  }

  @media (min-width: 640px) {
    .footer-bottom {
      padding-top: 2rem;
    }
  }

  .footer-bottom p {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.5);
  }

  @media (min-width: 640px) {
    .footer-bottom p {
      font-size: 0.875rem;
    }
  }

  /* Light Theme Adjustments */
  .light .site-footer {
    background: rgba(255, 255, 255, 0.8);
    border-top-color: rgba(0, 0, 0, 0.1);
    box-shadow: 0 -1px 20px rgba(218, 165, 32, 0.08);
  }

  .light .logo-lux {
    color: #1a1a1a;
  }

  .light .footer-tagline {
    color: rgba(0, 0, 0, 0.6);
  }

  .light .social-link {
    background: rgba(0, 0, 0, 0.08);
    color: rgba(0, 0, 0, 0.6);
  }

  .light .social-link:hover {
    background: #DAA520;
    color: #fff;
  }

  .light .footer-heading {
    color: #1a1a1a;
  }

  .light .footer-links a {
    color: rgba(0, 0, 0, 0.6);
  }

  .light .network-link.global {
    color: rgba(0, 0, 0, 0.6);
  }

  .light .network-link.disabled {
    color: rgba(0, 0, 0, 0.3);
  }

  .light .footer-bottom {
    border-top-color: rgba(0, 0, 0, 0.1);
  }

  .light .footer-bottom p {
    color: rgba(0, 0, 0, 0.5);
  }
</style>
